<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingTop="5dp" >

	<LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	   >
	    <TextView
	        android:id="@+id/tvHeaderMainFragment"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        style="@style/text_h1"
	        android:text="GPS.CONF TWEAKS" />
	</LinearLayout> 

	<LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	     >
	    <TextView
	        android:id="@+id/tvUseSSL"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="use SSL" />
	    <CheckBox
            android:id="@+id/cbUseSSL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false" />
	</LinearLayout> 
	
	<LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	     >
	    <TextView
	        android:id="@+id/tvUseAlt"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="use Alternative" />
	    <CheckBox
            android:id="@+id/cbUseAlt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false" />
	</LinearLayout> 

	<LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    >
	    <TextView
	        android:id="@+id/tvNtpServer"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="use ntp.derekgordon.com" />
	    <CheckBox
            android:id="@+id/cbUseNtpDerek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false" />
	</LinearLayout> 
	
	<LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    >
	    <TextView
	        android:id="@+id/tvInThres"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="threshold" />
	    <TextView
	        android:id="@+id/tvInThresValue"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="3000" />
	    <SeekBar
            android:id="@+id/sbThersSlider"
            android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:max="6"
            android:progress="6" />
	    
	</LinearLayout>
	
	<LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	   >
	    <TextView
	        android:id="@+id/tvHeaderMainFragment"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        style="@style/text_h1"
	        android:text="GPS.XML TWEAKS" />
	</LinearLayout> 
	
	<LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    >
	    <TextView
	        android:id="@+id/tvXmlTweak"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="use asus xml tweaks" />
	    <CheckBox
            android:id="@+id/cbUseXmlTweak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false" />
	</LinearLayout> 
	
<LinearLayout
	    android:orientation="vertical" 		
    	android:layout_width="match_parent" 
    	android:layout_height="match_parent"
	    android:divider="?android:attr/dividerHorizontal"
	    android:showDividers="middle" >
		<View
		    android:layout_width="wrap_content"
		    android:layout_height="3dp"
		    android:layout_weight="1" />
	    <LinearLayout
		    style="?android:attr/buttonBarStyle"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" >
		    <Button
		        android:id="@+id/btnInstall"
		        style="?android:attr/buttonBarButtonStyle"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:text="Install aGPS fix" />
		</LinearLayout>
</LinearLayout> 

</LinearLayout>
